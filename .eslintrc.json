{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "AuthService": false,
    "CryptoService": false,
    "ContactService": false,
    "BaseError": false,
    "BadRequest": false,
    "NotFound": false,
    "Unauthorized": false,
    "Forbidden": false,
    "DatabaseError": false,
    "LoginToken": false,
    "sails": false,
    "Contact": false,
    "User": false,
    "UserController": false
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "dot-location": ["error", "property"],
    "eqeqeq": ["error", "smart"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "no-var": ["error"],
    "object-property-newline": ["error", {"allowMultiplePropertiesPerLine": true}],
    "object-shorthand": ["error"],
    "one-var": ["error", "never"],
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error"],
    "strict": ["error", "global"],
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "extends": "eslint:recommended"
}
